---
interface Props {
  title: string;
  description: string;
  iconUrl: string;
	borderColor: string;
}

const { title, description, iconUrl, borderColor } = Astro.props;
---

<li class="card">
	<div class="border-top" style=`background-color: var(--${borderColor})`/>
  <div class="card-content">
    <div class="card-title">{title}</div>
    <div class="card-description">{description}</div>
  </div>
  <div class="card-icon">
    <img src={iconUrl} alt="card icon" width="58" height="58"/>
  </div>
</li>
<style>
	.card {
		position: relative;
		list-style: none;
		background-color: var(--neutral-100);
		filter: drop-shadow(0 0 1rem rgb(205, 208, 226));
		border-radius: 8px;
		padding: 1.7rem;
		display: grid;
		gap: 2rem;
		overflow: hidden;
		min-height: 13.875rem;
	}
	.card-content{ 
		display: grid; 
		gap: 0.25rem;
	}
	.card-title {
		color: var(--neutral-500);
		font-weight: 600;
		font-size: 1.25rem;
	}
	.card-description {
		color: var(--neutral-300);
		font-size:0.8125rem;
		letter-spacing: 0.125px;
	}
	.card-icon {
		display: flex;
		justify-content: end;
	}
	.card-icon > img {
		transition: scale 150ms ease-in-out;
	}
	.card-icon > img:hover {
		scale: 1.25;
	}

	.border-top{
		position: absolute;
		width: 100%;
		height: 0.25rem;
		top: 0;
	}

	@media (min-width: 1024px){
		.card {
			min-height: 15.8125rem;
			padding: 2.125rem;
			gap: 3rem;
		}

		.card-icon > img {
			width: 64px;
			height: 64px;
		}
	}
</style>
